<div class="row">
  <div class="col-auto">
    <h2></span>Movie Reviews!</span></h2>
  </div>
</div>
<!-- dashboard page all can be changed to make page layout different-->
<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Movie Review:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <input class="form-input" type="text" id="post-title" name="post-title" placeholder="Movie Title" />
      </div>
      
      <div class="form-group">
        <textarea class="form-input" id="post-desc" name="post-desc" placeholder="Movie Review"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Make</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>My Movie Reviews:</h3>
    

    {{#each posts as |post|}}
      <div class="postDesc">
      <p class="text-center postDescMain">
       {{post.title}}
       
        {{post.content}}
      </p>
    </div>

    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}>{{post.title}}{{post.content}}"</a></h4>
      </div>
     
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{post.id}}">DELETE REVIEW</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>